<!DOCTYPE html>
<html>
  <head>
    <title>Marketplace</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", media: 'all' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

    <header class="p-3 bg-dark text-white">

      <nav class="navbar navbar-default">

        <div class="container">

          <div class="navbar-header">
            <li><%= link_to t('.home'), root_path, class: 'nav-link px-2 text-white' %></li>

            <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
              <li class="dropdown">
                <%= link_to '#', class: 'nav-link px-2 dropdown-toggle text-white',
                  data: {"bs-toggle": 'dropdown'} do %>
                  <%= t('.categories') %>
                <% end %>

                <ul class="dropdown-menu">
                  <% Category.all.each do |category| %>
                    <li>
                      <%= link_to category.title, products_path(category: category.title), class: "link" %>
                    </li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>

          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><%= link_to 'Add product', new_product_path, class: 'btn btn-primary' %></li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-right">

            <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
              <li class="dropdown">
                <%= link_to '#', class: 'nav-link px-2 dropdown-toggle text-white',
                  data: {"bs-toggle": 'dropdown'} do %>
                  <%= tag.div '', class: "flag #{I18n.locale}-flag mt-1" %>
                  <%= t I18n.locale %>
                <% end %>

                <ul class="dropdown-menu">
                  <% I18n.available_locales.each do |locale| %>
                    <li>
                      <% if I18n.locale == locale %>
                        <%= tag.span t(locale), class: 'dropdown-item' %>
                      <% else %>
                        <%= link_to t(locale), url_for(locale: locale),
                          class: 'dropdown-item' %>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </li>
            </ul>

            <% if user_signed_in? %>
              <%= current_user.email %>
              <%= link_to t('global.button.edit_user'), edit_user_registration_path, class: 'btn btn-secondary' %>
              <%= link_to t('global.button.log_out'), destroy_user_session_path, data: { 'turbo-method': :delete }, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to t('global.button.log_in'), new_user_session_path, class: 'btn btn-secondary' %>
              <%= link_to t('.registration'), new_user_registration_path, class: 'btn btn-secondary' %>
            <% end %>

          </ul>

        </div>

      </nav>

    </header>

    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
