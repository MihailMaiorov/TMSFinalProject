<%= form_with(model: [@category, @product]) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="md-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :name %>
    </div>

    <div class="col-sm-10">
      <%= form.text_field :name, placeholder: "Name", class: 'form-control' %>
    </div>
  </div>

  <div class="md-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :description %>
    </div>

    <div class="col-sm-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="md-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :price %>
    </div>

    <div class="col-sm-10">
      <%= form.text_field :price, placeholder: "Price", class: 'form-control' %>
    </div>
  </div>

  <div class="md-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :pictures %>
    </div>

    <div class="col-sm-10">
      <%= form.file_field :pictures, multiple: true %>
    </div>
  </div>

  <div>
    <%= form.submit t('global.button.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
