<p style="color: green"><%= notice %></p>

<%= render @product %>

<h1 class="md-4"><%= @product.name %><h1>

  <p class="lead my-3">
    <% @product.pictures.each do |picture| %>
      <%= link_to image_tag(picture.variant(resize_to_limit: [300, 300])), picture %>
    <% end %>
  </p>

  <p class="lead my-3">
    Category: <%= @product.category.title %>
  </p>

  <p class="lead my-3">
    <%= @product.description %>
  </p>

  <p class="lead my-3">
    <h2>
      <%= t('.price') %>
      <%=  @product.price %>
     </h2>
  </p>

  <p class="lead my-3">
    <h2>
      <%= t('.seller') %>
      <%= @product.user.email %>
     </h2>
  </p>

  <p class="lead my-3">
    <time datetime="<%= @product.formatted_create_at %>">
      <%= @product.formatted_create_at %>
    <time>
  </p>
  <% if user_signed_in? %>
    <% if @product.user_id == current_user.id %>
      <%= link_to t('global.button.edit'), edit_product_path(@product.id), class: 'btn btn-secondary'%> |
      <%= link_to t('global.button.delete'), product_path(@product.id), class: 'btn btn-danger',
        data: { turbo_method: :delete, turbo_confirm: t('dialog.you_sure') } %>
    <% end %>
  <% end %>

<hr class="my-3">

  <% category = Category.find(@product.category_id)%>
  <div>
    <%= link_to category.title, products_path(category: category.title), class: 'btn btn-primary' %>
  </div>

</hr>
