<p style="color: green"><%= notice %></p>

<%= render @product %>

<h1 class="md-4"><%= @product.name %><h1>

  <p class="lead my-3">
    <%= @product.description %>
  </p>

  <p class="lead my-3">
    <%= @product.price %>
  </p>

  <p class="lead my-3">
    <% @product.pictures.each do |picture| %>
      <%= link_to image_tag(picture.variant(resize_to_limit: [100, 100])), picture %>
    <% end %>
  </p>

  <p class="lead my-3">
    <time datetime="<%= @product.formatted_create_at %>">
      <%= @product.formatted_create_at %>
    <time>
  </p>

<%= link_to 'Edit', edit_category_product_path(@product.category_id), class: 'btn btn-secondary'%> |
<%= link_to 'Delete', category_product_path(@product.category_id), class: 'btn btn-danger',
  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>

<hr class="my-3">

<div>
  <%= link_to "Back to products", category_path(@product.category_id) %>
</div>

